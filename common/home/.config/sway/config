set $term alacritty

set $mod Mod4

### Key bindings
# Basics:
    bindsym $mod+Return exec $term
    bindsym $mod+Shift+Return exec $term --class=floating

    bindsym $mod+q kill

    floating_modifier $mod normal

    bindsym $mod+Shift+c reload

    bindsym $mod+l exec swaylock

    bindsym $mod+Shift+e exit

# Moving:
    # Move focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Layout:
    bindsym $mod+h splith
    bindsym $mod+v splitv

    bindsym $mod+s layout stacking
    bindsym $mod+t layout tabbed

    bindsym $mod+f fullscreen

    bindsym $mod+Shift+f floating toggle

    for_window [app_id="floating"] floating enable; splitv

    bindsym $mod+p focus parent

# Styling:
    # TODO colors (and vscode colors too)
    client.focused #82AC5D #4CAF50 #FFFFFF #82AC5D #4CAF50

    hide_edge_borders both

# User-specific:
include /household-conf/host/`hostname`/home/$USER/.config/compositor/config

# System-specific:
include @sysconfdir@/sway/config.d/*

seat seat0 xcursor_theme Quintom_Ink

exec dbus-sway-environment
exec configure-gtk