set $term alacritty
set $launcher sirula 

set $mod Mod4

### I/O
output DP-1 mode 2560x1440@165.080Hz
output DP-1 subpixel rgb

### Workspaces
workspace Up
workspace Down
workspace Left
workspace Right

### Global layout
gaps top 30
default_border pixel 2

### Keyboard layout
input * {
    xkb_layout "us,ru"
    xkb_options "altwin:swap_alt_win,grp:win_space_toggle"
}

### Key bindings
# Basics:
    bindsym $mod+Shift+Return exec $term
    bindsym $mod+Return exec $launcher

    bindsym $mod+q kill

    floating_modifier $mod normal

    bindsym $mod+Shift+c reload

    bindsym $mod+l exec swaylock

    bindsym $mod+Shift+e exit

# Moving:
    # Move focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Alt+Left move left
    bindsym $mod+Alt+Down move down
    bindsym $mod+Alt+Up move up
    bindsym $mod+Alt+Right move right

    # Move the focused window to the workspace
    bindsym $mod+Ctrl+Up move window to workspace Up
    bindsym $mod+Ctrl+Down move window to workspace Down
    bindsym $mod+Ctrl+Left move window to workspace Left
    bindsym $mod+Ctrl+Right move window to workspace Right

    # Switch to workspace
    bindsym $mod+Shift+Up workspace Up
    bindsym $mod+Shift+Down workspace Down
    bindsym $mod+Shift+Left workspace Left
    bindsym $mod+Shift+Right workspace Right

# Layout:
    bindsym $mod+h splith
    bindsym $mod+v splitv

    bindsym $mod+s layout stacking
    bindsym $mod+t layout tabbed
    bindsym $mod+r layout toggle

    bindsym $mod+f fullscreen

    bindsym $mod+Shift+f floating toggle

    bindsym $mod+p focus parent

    for_window [class="Steam"] floating enable
    for_window [app_id="org.gnome.Calculator"] floating enable

# Styling:
    # TODO colors (and vscode colors too)
    client.focused #82AC5D #4CAF50 #FFFFFF #82AC5D #4CAF50

    hide_edge_borders vertical

# User-specific:
include /household-conf/host/`hostname`/home/$USER/.config/compositor/config

# System-specific:
include @sysconfdir@/sway/config.d/*

exec dbus-sway-environment
exec configure-gtk

# Default workspace
workspace Down

# Widgets
exec eww open bar 
